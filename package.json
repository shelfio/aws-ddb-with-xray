{
  "name": "@shelf/aws-ddb-with-xray",
  "version": "0.0.2",
  "description": "AWS DynamoDB Document Client initialized with X-Ray",
  "keywords": [
    "aws sdk",
    "document client",
    "dynamodb",
    "x-ray",
    "xray"
  ],
  "repository": "shelfio/aws-ddb-with-xray",
  "license": "MIT",
  "author": {
    "name": "Vlad Holubiev",
    "email": "vlad@shelf.io",
    "url": "shelf.io"
  },
  "main": "lib",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rm -rf lib/ && yarn build:types && babel src --out-dir lib --ignore '**/*.test.ts' --extensions '.ts' && find ./lib -name '*.test.d.ts' -delete",
    "build:types": "tsc --emitDeclarationOnly --declaration --isolatedModules false --declarationDir lib",
    "coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.ts,.json --fix",
    "lint:ci": "eslint . --ext .js,.ts,.json",
    "prepack": "yarn build",
    "test": "jest src",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,json,md,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "preset": "@shelf/jest-dynamodb"
  },
  "dependencies": {
    "aws-xray-sdk-core": "2.5.0"
  },
  "devDependencies": {
    "@babel/cli": "7.10.5",
    "@babel/core": "7.11.0",
    "@babel/preset-env": "7.11.0",
    "@babel/preset-typescript": "7.10.4",
    "@shelf/eslint-config": "0.18.0",
    "@shelf/jest-dynamodb": "1.7.0",
    "@types/jest": "26.0.8",
    "@types/node": "10",
    "babel-jest": "26.2.2",
    "dynamodb-local": "0.0.31",
    "eslint": "7.6.0",
    "husky": "4.2.5",
    "jest": "26.2.2",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "typescript": "3.9.7"
  },
  "peerDependencies": {
    "aws-sdk": "2.x.x"
  },
  "engines": {
    "node": ">=10"
  },
  "publishConfig": {
    "access": "public"
  }
}
